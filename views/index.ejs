<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>I Dream of Electric Tweaks</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background: #fff;
            border: 2px solid #ddd;
            padding: 1.5rem;
            border-radius: 8px;
            max-width: 600px;
            width: 100%;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            color: #444;
            text-align: center;
        }

        img {
            display: block;
            width: 100%;
            height: auto;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #eee;
        }

        label {
            font-weight: bold;
            font-size: 1rem;
            margin-bottom: 0.5rem;
            display: block;
            color: #444;
        }

        input[type="text"] {
            font-size: 1rem;
            padding: 0.4rem 0.6rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 100%;
        }

        button {
            background: #007bff;
            color: white;
            font-size: 1rem;
            padding: 0.6rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 1rem;
        }

        button:hover {
            background: #0056b3;
        }

        .toggle-settings {
            font-size: 0.9rem;
            margin: 1rem 0;
            text-align: center;
            cursor: pointer;
            color: #007bff;
            text-decoration: underline;
        }

        .settings {
            display: none;
            margin-top: 1rem;
        }

        .slider-container {
            margin-bottom: 1rem;
        }

        .slider-container label {
            display: flex;
            justify-content: space-between;
        }

        input[type="range"] {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>I Dream of Electric Tweaks...</h1>
        <form action="/generate" method="POST">
            <img src="" alt="Generated Image Placeholder" id="image-preview">
            <!-- Prompt Input -->
            <label for="prompt">What do you dream?</label>
            <input type="text" id="prompt" name="prompt" placeholder="e.g., A tweak flying high in the sky..." required>

            <!-- Tweak Settings Toggle -->
            <div class="toggle-settings" onclick="toggleSettings()">Tweak Settings â†“</div>

            <!-- Tweak Settings -->
            <div class="settings" id="settings-container">
                <!-- LoRA Scale -->
                <div class="slider-container">
                    <label for="lora_scale">AI Magic: <span id="lora_value">1.0</span></label>
                    <input type="range" id="lora_scale" name="lora_scale" min="0" max="3" step="0.1" value="1" oninput="updateValue('lora_value', this.value)">
                </div>

                <!-- Guidance Scale -->
                <div class="slider-container">
                    <label for="guidance_scale">Guidance: <span id="guidance_value">3.0</span></label>
                    <input type="range" id="guidance_scale" name="guidance_scale" min="1.0" max="20.0" step="0.1" value="3.0" oninput="updateValue('guidance_value', this.value)">
                </div>

                <!-- Prompt Strength -->
                <div class="slider-container">
                    <label for="prompt_strength">Strength: <span id="strength_value">0.8</span></label>
                    <input type="range" id="prompt_strength" name="prompt_strength" min="0.0" max="1.0" step="0.1" value="0.8" oninput="updateValue('strength_value', this.value)">
                </div>

                <!-- Inference Steps -->
                <div class="slider-container">
                    <label for="num_inference_steps">Test Steps: <span id="steps_value">28</span></label>
                    <input type="range" id="num_inference_steps" name="num_inference_steps" min="1" max="100" step="1" value="28" oninput="updateValue('steps_value', this.value)">
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit">Generate</button>
        </form>
    </div>

    <script>
        function updateValue(id, value) {
            document.getElementById(id).innerText = value;
        }

        function toggleSettings() {
            const settings = document.getElementById("settings-container");
            settings.style.display = settings.style.display === "block" ? "none" : "block";
        }
    </script>
</body>
</html>
