<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Higher - Your Generated Image</title>
    <style>
        /* Same styles as index.ejs up to .container */
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(-45deg, #f0f7f0, #e0f2e0, #d0edd0, #f5f9f5);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            color: #1a1a1a;
            margin: 0;
            padding: 2rem;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            background: #ffffff;
            border: 1px solid #e0e0e0;
            padding: 2rem;
            border-radius: 12px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2rem;
            margin: 0 0 1.5rem 0;
            color: #15803d;
            font-weight: 700;
            text-align: center;
        }

        .image-container {
            margin: 2rem 0;
        }

        .generated-image {
            width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .prompt-display {
            background: #f0f7f0;
            padding: 1rem;
            border-radius: 6px;
            margin: 1rem 0;
            color: #374151;
        }

        .prompt-label {
            font-weight: 600;
            color: #15803d;
            margin-bottom: 0.5rem;
            display: block;
        }

        .buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .button {
            flex: 1;
            padding: 1rem;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s, transform 0.2s;
        }

        .primary {
            background-color: #15803d;
            color: white;
            border: none;
        }

        .secondary {
            background-color: #f0f7f0;
            color: #15803d;
            border: 2px solid #15803d;
        }

        .button:hover {
            transform: translateY(-1px);
        }

        .primary:hover {
            background-color: #166534;
        }

        .secondary:hover {
            background-color: #e0f2e0;
        }

        .button:active {
            transform: translateY(1px);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Your Creation</h1>
        
        <div class="prompt-display">
            <span class="prompt-label">Your prompt:</span>
            <%= prompt %>
        </div>

        <div class="image-container">
            <img src="<%= imageUrl %>" alt="Generated image" class="generated-image">
        </div>

        <div class="buttons">
            <a href="/" class="button secondary">Create New</a>
            <button onclick="downloadImage()" class="button primary">Download</button>
        </div>
    </div>

    <script>
        async function downloadImage() {
            try {
                const response = await fetch('<%= imageUrl %>');
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'higher-creation.png';
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                a.remove();
            } catch (error) {
                console.error('Error downloading image:', error);
                alert('Failed to download image. Please try again.');
            }
        }
    </script>
</body>
</html>